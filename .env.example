# General
PROJECT_NAME="Recipe Management API"
ROOT_PATH="/recipes-api"
API_V1_STR=/api/v1

# Security
# REQUIRED: Generate a secure random key with: openssl rand -hex 32
# The application will refuse to start with insecure or missing keys
SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Initial Superuser (REQUIRED)
# These credentials are used to create the first admin user on startup
# Password must be at least 12 characters
FIRST_SUPERUSER_EMAIL=
FIRST_SUPERUSER_PASSWORD=
FIRST_SUPERUSER_FIRST_NAME=Admin
FIRST_SUPERUSER_LAST_NAME=User

# Database
DATABASE_URL=sqlite:///./db/recipes.db

# CORS
# Must be a JSON formatted list of strings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
